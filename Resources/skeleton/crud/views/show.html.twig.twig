{{ "{% extends 'VaszevCrudLteBundle::layout.html.twig' %}" }}

{{ "{% block page_title %}" }}
{{ "{{ 'views.show.show'|trans({'%entity%': '" }}{{ entity }}{{ "'}, 'VaszevCrudLteBundle') }}" }}
{{ "{% endblock %}" }}
{{ "{% block page_subtitle %}{% endblock %}" }}

{{ "{% block menu %}{% include 'vaszevCrudMenu.html.twig' %}{% endblock %}" }}

{{ "{% block content %}" }}

  <div class="box box-default">
    <div class="box-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <form class="form-horizontal">
              <fieldset>
                {%- for field, metadata in fields %}
                  <div class="control-group">
                    <label class="control-label">{{ field|capitalize }}</label>
                    <div class="controls">
                      {%- if metadata.type in ['date', 'datetime'] %}
                        <span class="">
                          {{ '
                          {% if entity.'~ field|replace({'_': ''}) ~' is not empty %}
                          {{ entity.'~ field|replace({'_': ''}) ~'|date(\'Y-m-d H:i:s\') }}
                          {% else %}
                          -
                          {% endif %}
                          ' }}
                        </span>
                      {%- else %}
                        <span class="input-xlarge uneditable-input">{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</span>
                      {%- endif %}
                    </div>
                  </div>
                {%- endfor %}
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="box-footer">
      {% set hide_edit, hide_delete = false, false %}
      {% include 'crud/views/others/record_actions.html.twig.twig' %}
    </div>
  </div>

{{ "{% endblock %}" }}

{{ "{% block content_footer %}{% include 'vaszevCrudFooter.html.twig' %}{% endblock %}" }}
